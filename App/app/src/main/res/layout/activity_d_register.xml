<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_background_d"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:contentDescription="@string/lock_icon"
    tools:context=".Register">

    <TextView
        android:id="@+id/app_textView_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/app_logo"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/register_divider11_d"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_textView_d" />

    <ScrollView
        android:layout_width="406dp"
        android:layout_height="828dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_divider11_d">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Switch
                    android:id="@+id/sitter_switch_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="15dp"
                    android:text="Are you a Sitter?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/create_textView_d"
                    app:layout_constraintStart_toStartOf="@+id/create_textView_d"
                    app:layout_constraintTop_toBottomOf="@+id/create_textView_d" />

                <TextView
                    android:id="@+id/create_textView_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/app_text1"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/register_imageView6_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="240dp"
                    android:contentDescription="@string/person_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/user_editTex_d"
                    app:layout_constraintEnd_toEndOf="@+id/user_editTex_d"
                    app:layout_constraintStart_toStartOf="@+id/user_editTex_d"
                    app:layout_constraintTop_toTopOf="@+id/user_editTex_d"
                    app:srcCompat="@drawable/person_icon" />

                <EditText
                    android:id="@+id/user_editTex_d"
                    style="@style/Edit_Text"
                    android:layout_width="315dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginBottom="30dp"
                    android:autofillHints="@string/app_contentDescription1"
                    android:hint="@string/app_user"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/mail_editText_d"
                    style="@style/Edit_Text"
                    android:layout_width="315dp"
                    android:layout_height="74dp"
                    android:layout_marginBottom="30dp"
                    android:autofillHints="@string/app_user_email"
                    android:hint="@string/app_user_email"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/register_imageView7_d"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="240dp"
                    android:contentDescription="@string/email_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/mail_editText_d"
                    app:layout_constraintEnd_toEndOf="@+id/mail_editText_d"
                    app:layout_constraintStart_toStartOf="@+id/mail_editText_d"
                    app:layout_constraintTop_toTopOf="@+id/mail_editText_d"
                    app:srcCompat="@drawable/mail_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/pass_editText_d"
                    style="@style/Edit_Text"
                    android:layout_width="315dp"
                    android:layout_height="74dp"
                    android:layout_marginBottom="30dp"
                    android:autofillHints="@string/app_password"
                    android:hint="@string/app_password"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/register_imageView8_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="240dp"
                    android:contentDescription="@string/lock_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/pass_editText_d"
                    app:layout_constraintEnd_toEndOf="@+id/pass_editText_d"
                    app:layout_constraintStart_toStartOf="@+id/pass_editText_d"
                    app:layout_constraintTop_toTopOf="@+id/pass_editText_d"
                    app:srcCompat="@drawable/lock_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/confirmpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/confirm_editText_d"
                    style="@style/Edit_Text"
                    android:layout_width="315dp"
                    android:layout_height="74dp"
                    android:autofillHints="@string/app_user_confirm"
                    android:hint="@string/app_user_confirm"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="77dp" />

                <ImageView
                    android:id="@+id/register_imageView10_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="240dp"
                    android:contentDescription="@string/lock_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/confirm_editText_d"
                    app:layout_constraintEnd_toEndOf="@+id/confirm_editText_d"
                    app:layout_constraintStart_toStartOf="@+id/confirm_editText_d"
                    app:layout_constraintTop_toTopOf="@+id/confirm_editText_d"
                    app:srcCompat="@drawable/lock_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/address_editTex_d"
                    style="@style/Edit_Text"
                    android:layout_width="315dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:autofillHints="@string/app_contentDescription1"
                    android:hint="@string/Address"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="240dp"
                    android:contentDescription="@string/home_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/address_editTex_d"
                    app:layout_constraintEnd_toEndOf="@+id/address_editTex_d"
                    app:layout_constraintStart_toStartOf="@+id/address_editTex_d"
                    app:layout_constraintTop_toTopOf="@+id/address_editTex_d"
                    app:srcCompat="@drawable/home_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bdate"
                android:layout_width="match_parent"
                android:layout_height="133dp">

                <TextView
                    android:id="@+id/bdate_textView_da2"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="55dp"
                    android:text="@string/Date_of_Birth"
                    android:textAlignment="viewStart"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/day_editText_da2"
                    style="@style/Edit_Text_Profile"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:autofillHints="@string/day"
                    android:entries="@array/Day"
                    android:hint="@string/day"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/bdate_textView_da2"
                    app:layout_constraintTop_toBottomOf="@+id/bdate_textView_da2" />

                <Spinner
                    android:id="@+id/month_editText_da2"
                    style="@style/Edit_Text_Profile"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:autofillHints="@string/month"
                    android:entries="@array/Month"
                    android:hint="@string/month"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/day_editText_da2"
                    app:layout_constraintTop_toBottomOf="@+id/bdate_textView_da2" />

                <Spinner
                    android:id="@+id/year_editText_da2"
                    style="@style/Edit_Text_Profile"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:autofillHints="@string/year"
                    android:entries="@array/Year"
                    android:hint="@string/year"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/month_editText_da2"
                    app:layout_constraintTop_toBottomOf="@+id/bdate_textView_da2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="138dp">

                <Spinner
                    android:id="@+id/gender_editTex_d"
                    style="@style/Edit_Text"
                    android:layout_width="315dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="30dp"
                    android:autofillHints="@string/app_contentDescription1"
                    android:entries="@array/gender"
                    android:hint="@string/app_user"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/gender_textView_da2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:text="@string/Gender"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/gender_editTex_d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="131dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="240dp"
                    android:contentDescription="@string/mobile"
                    app:layout_constraintBottom_toBottomOf="@+id/mobile_editTex_d"
                    app:layout_constraintEnd_toEndOf="@+id/mobile_editTex_d"
                    app:layout_constraintStart_toStartOf="@+id/mobile_editTex_d"
                    app:layout_constraintTop_toTopOf="@+id/mobile_editTex_d"
                    app:srcCompat="@drawable/call_icon" />

                <EditText
                    android:id="@+id/mobile_editTex_d"
                    style="@style/Edit_Text"
                    android:layout_width="315dp"
                    android:layout_height="74dp"
                    android:layout_marginBottom="30dp"
                    android:autofillHints="@string/app_contentDescription1"
                    android:hint="@string/mobile"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/register_button_d"
                    android:layout_width="320dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/buttonshape"
                    android:contentDescription="@string/app_button_register"
                    android:fontFamily="@font/allerta_stencil"
                    android:shadowColor="#FCE4EC"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="@string/app_button_register"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:backgroundTint="#1e1e1e"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>