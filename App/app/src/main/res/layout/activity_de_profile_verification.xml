<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".profile_verification">

    <TextView
        android:id="@+id/take_textView_de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="@string/photo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/profile_textView_de"
        app:layout_constraintStart_toStartOf="@+id/profile_textView_de"
        app:layout_constraintTop_toBottomOf="@+id/profile_textView_de" />

    <Button
        android:id="@+id/save_button_de"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonshape"
        android:contentDescription="@string/Save"
        android:fontFamily="@font/allerta_stencil"
        android:onClick="startSave2"
        android:shadowColor="#FCE4EC"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/Save"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#1e1e1e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/upload_imageButton_de"
        app:layout_constraintStart_toStartOf="@+id/upload_imageButton_de"
        app:layout_constraintTop_toBottomOf="@+id/upload_imageButton_de" />

    <TextView
        android:id="@+id/upload_textView_de"
        android:layout_width="305dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="@string/upload"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_de"
        app:layout_constraintStart_toStartOf="@+id/imageButton_de"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_de" />

    <ImageView
        android:id="@+id/logo_image_de"
        android:layout_width="397dp"
        android:layout_height="260dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/the_sitter_3" />

    <TextView
        android:id="@+id/profile_textView_de"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="@string/profile_verification"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/logo_image_de"
        app:layout_constraintStart_toStartOf="@+id/logo_image_de"
        app:layout_constraintTop_toBottomOf="@+id/logo_image_de" />

    <ImageButton
        android:id="@+id/imageButton_de"
        android:layout_width="157dp"
        android:layout_height="116dp"
        android:layout_marginTop="24dp"
        android:onClick="startCamera"
        app:layout_constraintEnd_toEndOf="@+id/take_textView_de"
        app:layout_constraintStart_toStartOf="@+id/take_textView_de"
        app:layout_constraintTop_toBottomOf="@+id/take_textView_de"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageButton
        android:id="@+id/upload_imageButton_de"
        android:layout_width="157dp"
        android:layout_height="116dp"
        android:layout_marginTop="24dp"
        android:onClick="startDocument"
        app:layout_constraintEnd_toEndOf="@+id/upload_textView_de"
        app:layout_constraintStart_toStartOf="@+id/upload_textView_de"
        app:layout_constraintTop_toBottomOf="@+id/upload_textView_de"
        app:srcCompat="@android:drawable/stat_sys_upload" />

</androidx.constraintlayout.widget.ConstraintLayout>