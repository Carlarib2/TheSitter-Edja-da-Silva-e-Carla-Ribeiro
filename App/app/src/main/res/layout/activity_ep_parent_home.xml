<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".parent_home">

  <TextView
      android:id="@+id/parent_textView_ep"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:fontFamily="sans-serif-medium"
      android:text="PARENT HOME"
      android:textSize="34sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <View
      android:id="@+id/divider12"
      android:layout_width="wrap_content"
      android:layout_height="2dp"
      android:layout_marginTop="7dp"
      android:background="?android:attr/listDivider"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/parent_textView_ep" />

  <View
      android:id="@+id/divider"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="?android:attr/listDivider"
      tools:layout_editor_absoluteY="367dp" />

  <TextView
      android:id="@+id/name_textView_ep"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="50dp"
      android:fontFamily="sans-serif-medium"
      android:text="MÃ¡rio Igreja"
      app:layout_constraintStart_toEndOf="@+id/parent_imageView_ep"
      app:layout_constraintTop_toBottomOf="@+id/divider12" />

  <TextView
      android:id="@+id/adv_textView_ep"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:fontFamily="sans-serif-medium"
      android:text="Advance: $15/hr"
      app:layout_constraintStart_toStartOf="@+id/name_textView_ep"
      app:layout_constraintTop_toBottomOf="@+id/name_textView_ep" />

  <View
      android:id="@+id/divider2"
      android:layout_width="0dp"
      android:layout_height="2dp"
      android:layout_marginTop="20dp"
      android:background="?android:attr/listDivider"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/parent_imageView_ep" />

  <ImageButton
      android:id="@+id/profile_imageButton_ep"
      android:layout_width="64dp"
      android:layout_height="52dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="30dp"
      android:onClick="startProfile7"
      android:src="@drawable/person_icon"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/message_imageButton_ep"
      app:layout_constraintTop_toBottomOf="@+id/divider37" />

  <ImageButton
      android:id="@+id/message_imageButton_ep"
      android:layout_width="64dp"
      android:layout_height="52dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="10dp"
      android:onClick="startMessages9"
      android:src="@drawable/mail_icon"
      app:layout_constraintStart_toEndOf="@+id/imageButton"
      app:layout_constraintTop_toBottomOf="@+id/divider37" />

  <ImageButton
      android:id="@+id/home_imageButton_ep"
      android:layout_width="64dp"
      android:layout_height="52dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="10dp"
      android:onClick="startHome8"
      android:src="@drawable/home_icon"
      app:layout_constraintStart_toStartOf="@+id/divider37"
      app:layout_constraintTop_toBottomOf="@+id/divider37" />

  <View
      android:id="@+id/divider37"
      android:layout_width="409dp"
      android:layout_height="1dp"
      android:layout_marginBottom="120dp"
      android:background="?android:attr/listDivider"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/recyclerView"
      tools:ignore="MissingConstraints" />

  <ImageView
      android:id="@+id/parent_imageView_ep"
      android:layout_width="150dp"
      android:layout_height="132dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/divider12"
      app:srcCompat="@drawable/pai_e_filho" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="404dp"
      android:layout_height="395dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/divider" />

  <ImageButton
      android:id="@+id/imageButton"
      android:layout_width="64dp"
      android:layout_height="52dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="10dp"
      app:layout_constraintStart_toEndOf="@+id/home_imageButton_ep"
      app:layout_constraintTop_toBottomOf="@+id/divider37"
      app:srcCompat="@drawable/event_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>