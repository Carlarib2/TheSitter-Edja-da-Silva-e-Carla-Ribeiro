<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="@string/app_password"
    android:background="@drawable/gradient"
    android:contentDescription="@string/app_password"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="393dp"
        android:layout_height="262dp"
        android:contentDescription="@string/app_image"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/the_sitter_3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:contentDescription="@string/app_contentDescription"
        app:srcCompat="@drawable/person_icon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="391dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icons" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:contentDescription="@string/app_contentDescription1"
        app:srcCompat="@drawable/lock_icon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="445dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/app_button_login"
        android:text="@string/app_button_login"
        android:textColor="#1a436e"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/app_button_register"
        android:text="@string/app_button_register"
        android:textColor="#1a436e"
        android:textStyle="bold"
        app:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="714dp" />

    <TextView
        android:id="@+id/text_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_text"
        android:textColor="#000000"
        android:textStyle="bold"
        app:constraint_referenced_tags="@string/app_text"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="598dp" />

    <EditText
        android:id="@+id/Password_text"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="@string/app_contentDescription"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="455dp" />

    <EditText
        android:id="@+id/user_text"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:autofillHints="@string/app_contentDescription1"
        android:ems="10"
        android:hint="@string/app_contentDescription1"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#1a436e"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="395dp" />


</androidx.constraintlayout.widget.ConstraintLayout>