<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sitters_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:paddingHorizontal="32dp"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/my_sitters_name"
        android:layout_width="165dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:hint="@string/sitter_Name"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toEndOf="@+id/my_sitters_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_sitters_location"
        android:layout_width="165dp"
        android:layout_height="32dp"
        android:hint="@string/sitter_Location"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/my_sitters_name"
        app:layout_constraintStart_toStartOf="@+id/my_sitters_name"
        app:layout_constraintTop_toBottomOf="@+id/my_sitters_name" />

    <ImageView
        android:id="@+id/my_sitters_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/circle_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>