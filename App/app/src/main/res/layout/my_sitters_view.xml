<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient"
    android:padding="8dp">

    <ImageView
        android:id="@+id/my_Sitters_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/my_Sitters_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/my_Sitters_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_Sitters_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/Gender"
        app:layout_constraintStart_toEndOf="@+id/my_Sitters_image"
        app:layout_constraintTop_toBottomOf="@+id/my_Sitters_name" />

    <TextView
        android:id="@+id/my_Sitters_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/my_Sitters_image"
        app:layout_constraintTop_toBottomOf="@+id/my_Sitters_gender" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_Sitters_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
