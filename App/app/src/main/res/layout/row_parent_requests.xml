<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_parentRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/parent_requests_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24dp"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Dalinela Bastos" />

            <TextView
                android:id="@+id/parent_requests_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/light_text"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/parent_requests_name"
                app:layout_constraintStart_toStartOf="@+id/parent_requests_name"
                app:layout_constraintTop_toBottomOf="@+id/parent_requests_name"
                tools:text="dalinela@gmail.com" />

            <TextView
                android:id="@+id/parent_requests_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:layout_marginEnd="82dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/PENDING"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/parent_requests_email"
                app:layout_constraintStart_toStartOf="@+id/parent_requests_email"
                app:layout_constraintTop_toBottomOf="@+id/parent_requests_email"
                tools:text="PENDING" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>