<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient"
    android:padding="8dp">


    <ImageView
        android:id="@+id/my_Family_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TextView para o nome -->

    <!-- TextView para o gênero -->
    <TextView
        android:id="@+id/my_Family_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/my_Family_image"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintStart_toEndOf="@+id/my_Family_image"
        app:layout_constraintTop_toTopOf="@+id/my_Family_image"
        tools:text="Name" />

    <!-- TextView para o número móvel -->

    <TextView
        android:id="@+id/my_Family_Bdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_Family_Name"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/my_Family_image"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        app:layout_constraintStart_toStartOf="@+id/my_Family_Name"
        app:layout_constraintTop_toBottomOf="@+id/my_Family_Name"
        tools:text="Gender" />

    <TextView
        android:id="@+id/my_Sitters_Mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_Family_Bdate"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/my_Family_image"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        app:layout_constraintStart_toStartOf="@+id/my_Family_Bdate"
        app:layout_constraintTop_toBottomOf="@+id/my_Family_Bdate"
        tools:text="Mobile" />

    <View
        android:id="@+id/row_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_Family_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
