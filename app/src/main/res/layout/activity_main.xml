<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sitter-buttton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/parent_button"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@color/white"
        android:backgroundTint="#EAE6E6"
        android:text="@string/Parent"
        app:layout_constraintBottom_toTopOf="@+id/sitter_button"
        app:layout_constraintEnd_toEndOf="@+id/imagem_principal"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imagem_principal"
        app:layout_constraintTop_toBottomOf="@+id/imagem_principal" />

    <ImageView
        android:id="@+id/imagem_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/the_sitter_3" />

    <Button
        android:id="@+id/sitter_button"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:backgroundTint="@color/Beige"
        android:text="@string/sitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/parent_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/parent_button"
        app:layout_constraintTop_toBottomOf="@+id/parent_button" />
</androidx.constraintlayout.widget.ConstraintLayout>